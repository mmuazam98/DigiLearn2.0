<section id="chatbot">
    <div id="body"> 
      
    <div id="chat-circle" class="btn btn-raised">
            <div id="chat-overlay"></div>
            <i class="far fa-robot"></i>
        </div>
      
      <div class="chat-box">
        <div class="chat-box-header">
          ChatBot
          <span class="chat-box-toggle"><i class="material-icons">close</i></span>
        </div>
        <div class="chat-box-body">
          <div class="chat-box-overlay">   
          </div>
          <div class="chat-logs">
            <div id="cm-msg-0" class="chat-msg user" style="display: block;">  
                <span class="msg-avatar"> 
                    <img src="images/chatbot.jpg">
                </span>          
                <div class="cm-msg-text">
                    Hello! <%= name %>. How can I help you?          
                </div>        
            </div>
          </div><!--chat-log -->
        </div>
        <div class="chat-input">      
          <form>
            <input type="text" id="chat-input" placeholder="Send a message..." autocomplete="off"/>
          <button type="submit" class="chat-submit" id="chat-submit"><i class="material-icons">send</i></button>
          </form>      
        </div>
      </div>
      
      
      
      
    </div>
</section>
